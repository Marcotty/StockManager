<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockManager.MainPage"
             Title="Stock Manager">

    <ScrollView>
        <VerticalStackLayout HorizontalOptions="Fill" Margin="20" Spacing="20">
            <Button Text="Stockage" 
                    TextColor="{OnIdiom Gray100, Phone={AppThemeBinding Light={StaticResource PrimaryDarkText}, Dark={StaticResource Test2}}, Tablet=Green, Desktop=Blue}"
                    HeightRequest="200"  
                    BackgroundColor="{OnIdiom Gray100, Phone={AppThemeBinding Light={StaticResource Gray100}, Dark=Transparent}, Tablet=Green, Desktop=Blue}"
                    BorderColor="{AppThemeBinding Light={StaticResource PrimaryDarkText}, Dark={StaticResource Test2}}"
                    BorderWidth="1"
                    Command="{Binding StorageCommand}" />
            <Button Text="Courses"
                    TextColor="{OnIdiom Gray100, Phone={AppThemeBinding Light={StaticResource PrimaryDarkText}, Dark={StaticResource Test2}}, Tablet=Green, Desktop=Blue}"
                    HeightRequest="200"  
                    BackgroundColor="{OnIdiom Gray100, Phone={AppThemeBinding Light={StaticResource Gray100}, Dark=Transparent}, Tablet=Green, Desktop=Blue}"
                    BorderColor="{AppThemeBinding Light={StaticResource PrimaryDarkText}, Dark={StaticResource Test2}}"
                    BorderWidth="1"
                    Command="{Binding ShoppingCommand}" />
            <Button Text="Recettes"
                    TextColor="{OnIdiom Gray100, Phone={AppThemeBinding Light={StaticResource PrimaryDarkText}, Dark={StaticResource Test2}}, Tablet=Green, Desktop=Blue}"
                    HeightRequest="200"  
                    BackgroundColor="{OnIdiom Gray100, Phone={AppThemeBinding Light={StaticResource Gray100}, Dark=Transparent}, Tablet=Green, Desktop=Blue}"
                    BorderColor="{AppThemeBinding Light={StaticResource PrimaryDarkText}, Dark={StaticResource Test2}}"
                    BorderWidth="1"
                    Command="{Binding RecipesCommand}" />
       </VerticalStackLayout>  
    </ScrollView>

</ContentPage>
