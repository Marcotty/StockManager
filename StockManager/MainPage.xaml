<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockManager.MainPage"
             Title="Stock Manager">

    <ScrollView>  
       <FlexLayout Direction="Row"  
                   JustifyContent="SpaceAround"  
                   AlignItems="Center"  
                   Wrap="Wrap">
            <Button Text="Stockage"  
                    WidthRequest="120"  
                    HeightRequest="120"  
                    BackgroundColor="LightBlue"  
                    Command="{Binding StorageCommand}" />
            <Button Text="Courses"  
                   WidthRequest="120"  
                   HeightRequest="120"  
                   BackgroundColor="LightGreen"
                   Command="{Binding ShoppingCommand}" />
            <Button Text="Recettes"  
                   WidthRequest="120"  
                   HeightRequest="120"  
                   BackgroundColor="LightCoral"
                   Command="{Binding RecipesCommand}" />
       </FlexLayout>  
    </ScrollView>

</ContentPage>
