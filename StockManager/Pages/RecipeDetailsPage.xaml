<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockManager.Pages.RecipeDetailsPage"
             xmlns:models="clr-namespace:StockManager.Model"
             xmlns:local="clr-namespace:StockManager.Pages"  
             Title="{Binding LocalRecipe.Name}">
    <VerticalStackLayout Margin="10">
        <Image Source="{Binding LocalRecipe.Image}"  
            HeightRequest="180"  
            Aspect="AspectFill" />
        <Label Text="{Binding LocalRecipe.Description}"  
            HorizontalOptions="Center"
            FontSize="16"  
            TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
        <Label Text="Ingredients : " FontAttributes="Bold" FontSize="15" />
        <CollectionView ItemsSource="{Binding LocalRecipe.Ingredients}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Item">
                    <StackLayout Orientation="Horizontal" Padding="1" >
                        <Label Text="{Binding Quantity} " FontSize="14"/>
                        <Label Text=" " />
                        <Label Text="{Binding Name}" FontSize="14" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <ImageButton Source="cart.png" 
            WidthRequest="10" 
            HeightRequest="10" 
            VerticalOptions="End" 
            Command="{Binding Source={RelativeSource AncestorType={x:Type local:RecipesPage}}, Path=BindingContext.AddRecipeToCartCommand}" CommandParameter="{Binding}"
            />
    </VerticalStackLayout>
</ContentPage>