<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockManager.Pages.RecipeDetailsPage"
             xmlns:models="clr-namespace:StockManager.Model"
             xmlns:local="clr-namespace:StockManager.Pages"  
             Title="{Binding LocalRecipe.Name}">
    <VerticalStackLayout Margin="10">
        <Image Source="{Binding LocalRecipe.Image}"  
            HeightRequest="180"  
            Aspect="AspectFill" />
        <Label Text="{Binding LocalRecipe.Description}"  
            HorizontalOptions="Center"
            FontSize="16"  
            TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
        <Label Text="Ingredients : " FontAttributes="Bold" FontSize="15" />
        <CollectionView ItemsSource="{Binding LocalRecipe.Ingredients}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Item">
                    <StackLayout Orientation="Horizontal" Padding="1" >
                        <Label Text="{Binding Quantity} " FontSize="14"/>
                        <Label Text=" " />
                        <Label Text="{Binding Name}" FontSize="14" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <ScrollView>
            <VerticalStackLayout>
                <Label Text="Instructions : " FontAttributes="Bold" FontSize="15" />
                <Label Text="{Binding LocalRecipe.Instructions}"/>
            </VerticalStackLayout>
        </ScrollView>
        <Border
            Stroke="LightGrey"
            StrokeThickness="2"
            Margin="15"
            Padding="20">
            <Border.Shadow>
                <Shadow Brush="Black"
            Offset="4,4"
            Radius="10"
            Opacity="0.2" />
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15"></RoundRectangle>
            </Border.StrokeShape>
            <StackLayout Orientation="Horizontal">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:RecipeDetailsPage}}, Path=BindingContext.CookItCommand}" CommandParameter="{Binding LocalRecipe}" />
                </StackLayout.GestureRecognizers>
                <Label Text="Cook it !" 
               FontAttributes="Bold" 
               FontSize="15"
               VerticalOptions="Center"/>
                <Image Source="cart.png" 
               WidthRequest="30" 
               HeightRequest="30" 
                />
            </StackLayout>
        </Border>
        <Border
            Stroke="LightGrey"
            StrokeThickness="2"
            Margin="15"
            Padding="20">
            <Border.Shadow>
                <Shadow Brush="Black"
                    Offset="4,4"
                    Radius="10"
                    Opacity="0.2" />
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="15"></RoundRectangle>
            </Border.StrokeShape>
            <StackLayout Orientation="Horizontal">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type local:RecipeDetailsPage}}, Path=BindingContext.AddRecipeToCartCommand}" CommandParameter="{Binding LocalRecipe}" />
                </StackLayout.GestureRecognizers>
                <Label Text="Add to shopping list" 
                       FontAttributes="Bold" 
                       FontSize="15"
                       VerticalOptions="Center"/>
                <Image Source="cart.png" 
                       WidthRequest="30" 
                       HeightRequest="30" 
                        />
            </StackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>