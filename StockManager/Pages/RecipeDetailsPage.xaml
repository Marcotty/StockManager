<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockManager.Pages.RecipeDetailsPage"
             xmlns:models="clr-namespace:StockManager.Model"
             xmlns:local="clr-namespace:StockManager.Pages"  
             Title="{Binding LocalRecipe.Name}">
    <VerticalStackLayout>
        <Image Source="{Binding LocalRecipe.Image}"  
            HeightRequest="180"  
            Aspect="AspectFill" />
        <Label Text="{Binding LocalRecipe.Description}"  
            FontSize="14"  
            TextColor="{AppThemeBinding Light=Gray, Dark=LightGray}" />
        <CollectionView ItemsSource="{Binding LocalRecipe.Ingredients}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Item">
                    <Grid >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>

                        <VerticalStackLayout Padding="10">
                            <StackLayout Orientation="Horizontal">
                                <Label Grid.Column="0" Text="Name : " FontSize="18" />
                                <Label Grid.Column="1" Text="{Binding Name}" FontSize="18" />
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label Grid.Column="0" Text="Quantity : " FontSize="18" />
                                <Label Grid.Column="1" Text="{Binding Quantity}" FontSize="18" />
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label Grid.Column="0" Text="Description : " FontSize="18" />
                                <Label Grid.Column="1" Text="{Binding Description}" FontSize="18" />
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label Grid.Column="0" Text="Location : " FontSize="18" />
                                <Label Grid.Column="1" Text="{Binding Location}" FontSize="18" />
                            </StackLayout>
                            <StackLayout Orientation="Horizontal">
                                <Label Grid.Column="0" Text="Expiration date : " FontSize="18" />
                                <Label Grid.Column="1" Text="{Binding ExpirationDate}" FontSize="18" />
                            </StackLayout>
                        </VerticalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <ImageButton Source="cart.png" 
            WidthRequest="10" 
            HeightRequest="10" 
            VerticalOptions="End" 
            Command="{Binding Source={RelativeSource AncestorType={x:Type local:RecipesPage}}, Path=BindingContext.AddRecipeToCartCommand}" CommandParameter="{Binding}"
            />
    </VerticalStackLayout>
</ContentPage>